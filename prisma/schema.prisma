// Prisma schema for Social Media Scheduler
// Defines database structure and relationships

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(cuid())
  caption     String
  imageUrl    String?
  scheduledAt DateTime
  status      PostStatus @default(UPCOMING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("posts")
}

enum PostStatus {
  UPCOMING
  PAST
}